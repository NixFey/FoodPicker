@using System.ComponentModel.DataAnnotations
@using System.Reflection
@model MealRating

@{
    ViewBag.Title = "Rating";
}

<h2>@(Model.Id == 0 ? "Create" : "Edit") Rating</h2>
<form asp-route="@(Model.Id == 0 ? "RatingCreate" : "RatingEdit")" method="post" class="mb-3">
    <div class="mb-3">
        <div class="col">
            <div class="card">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@Model.Meal.ImageUrl" class="img-fluid rounded-start" alt="Meal Image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Meal.Name</h5>
                            <p class="card-text">@Model.Meal.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" type="number" class="form-control"/>
        <div class="form-text">Ratings are between 1 and @MealRating.MaxRating.</div>
    </div>
    <div class="mb-3">
        <label asp-for="RatingComment"></label>
        <input asp-for="RatingComment" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>